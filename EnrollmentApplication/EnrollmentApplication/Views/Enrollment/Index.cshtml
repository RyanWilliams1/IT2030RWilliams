@model IEnumerable<EnrollmentApplication.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="panel panel-default">
    <div class="panel-heading">Student Search</div>
    <div class="panel-body">
        @using (Ajax.BeginForm("StudentSearch", "Enrollment",
           new AjaxOptions
           {
               InsertionMode = InsertionMode.Replace,
               HttpMethod = "GET",
               OnFailure = "searchFailed",
               UpdateTargetId = "searchresults",
           }))
        {
            <input type="text" name="q" />
            <input type="submit" value="search" />

        }
        <div id="searchresults"></div>
    </div>
</div>


<div class="panel panel-default">
    <div class="panel-heading">Course Search</div>
    <div class="panel-body">
        @using (Ajax.BeginForm("CourseSearch", "Enrollment",
           new AjaxOptions
           {
               InsertionMode = InsertionMode.Replace,
               HttpMethod = "GET",
               OnFailure = "searchFailed2",
               UpdateTargetId = "searchresults2",
           }))
        {
            <input type="text" name="q" />
            <input type="submit" value="search" />

        }
        <div id="searchresults2"></div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedCampus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentSemester)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Zipcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.State)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedCampus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentSemester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Zipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.State)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
            </td>
        </tr>
    }

</table>

@section Scripts{
    <script src="~/Scripts/Apps/EnrollmentScripts.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}